{
    "buildCommand": "npx vite build",
    "outputDirectory": "dist",
    "framework": "vite",
    "functions": {
        "api/**/*.js": {
            "runtime": "@vercel/node@3.0.0"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}